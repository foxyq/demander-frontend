@import '~assets/css/variables'

@keyframes :global(Select-animation-spin) {
  to {
    transform: rotate(1turn);
  }
}

.form-group
  margin-bottom 20px

.control-label
  display inline-block

.controls
  position relative

.form-control
  background-color #fff

.btn-clear
  position absolute
  padding 0
  top 0
  right 0
  bottom 0
  display flex
  align-items center
  justify-content center
  background none
  border none
  box-shadow none
  font-size 12px
  color #ccc

  width 34px
  line-height 42px
  text-align center

  &:hover
    cursor pointer

.ico
  display inline-block

.ico-dropdown
  position absolute
  top 10px
  right 18px

  span
    position absolute
    font-size 9px
    left 0
    top 12px

  span + span
    left 0
    top 0
    transform rotate(180deg)

.hasError {
  :global {
    .Select-control {
      border 1px solid $border-error
      margin 1px
      color $text-error
    }
  }
}

.inlineLabel
  display flex
  align-items center

  label
    padding-bottom 2px
    margin-right 15px

  > div
    width 100%

.labelSmall
  font-size 13px

:global
  .Select-menu-outer
    z-index 2000

  .Select-option.is-focused
    background-color $brand-primary !important
    color #fff

  .is-focused:not(.is-open) > .Select-control {
    border 2px solid $brand-primary
    box-shadow none
    outline none
    margin 0
  }

  .is-open > .Select-control {
    border 2px solid $brand-primary
    margin 0 !important
  }

  .Select-menu-outer {
    margin-top -2px
    border 2px solid $brand-primary
    border-top 1px solid #d4d7db
    width calc(100% - 1px)
  }

  .Select-control
    box-shadow none
    border 1px solid #d4d7db
    border-radius 5px
    background-color #fff
    margin 1px

    .Select-value-label,
    .Select-value,
    .Select-option,
    .Select-placeholder
      color $brand-text
      font-size 13px
      font-weight 600

    & .Select-placeholder,
    & .Select-value
      padding-left 15px !important
      padding-right 15px !important

    .Select-value,
    .Select-placeholder,
    .Select-input,
    .Select-input > input
      height 41px !important
      line-height 41px !important
      letter-spacing 0.3px
      font-weight 600

    .Select-clear-zone,
    .Select-arrow-zone
      display none

    .Select-input
      width 100%
      padding 0 15px !important

    .Select-placeholder
      color $text-gray
      font-weight 400

  .Select--multi .Select-value
    background-color $brand-primary !important
    color #fff !important

  .Select-loading {
    animation: Select-animation-spin 400ms infinite linear;
    width: 16px;
    height: 16px;
    box-sizing: border-box;
    border-radius: 50%;
    border: 2px solid transparent;
    border-right-color: $brand-primary;
    display: inline-block;
    position: relative;
    vertical-align: middle;
    margin-right: 10px;
  }

  .Select-control:hover
    box-shadow none
    cursor text

.clearable
  :global
    :not(.Select--multi) > .Select-control .Select-value
      padding-right 28px !important
